<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:textSize="20sp"
    >
      
    <!-- restaurant -->
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="0dp"
        android:layout_weight="1"
        >
	    <TextView
	    	android:text="Restaurant"
	    	android:layout_width="120dp"
	    	android:layout_height="wrap_content" 
	    	android:textSize="15sp"
	    />
	    <TextView
	        android:id="@+id/tmrec_details_restaurant"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="left"
	        android:width="100dp" 
	        android:textSize="15sp"
	    />
    </LinearLayout>
    
    <!-- dish name -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Dish Name" 
            android:textSize="15sp"
        />

        <TextView
            android:id="@+id/tmrec_details_dish_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:width="100dp" 
            android:gravity="left"
            android:textSize="15sp"
        />
    </LinearLayout>
    
    <!-- address -->
     <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="0dp"
        android:layout_weight="1"
        >
	    <TextView
	    	android:text="Address"
	    	android:layout_width="120dp"
	    	android:layout_height="wrap_content" 
	    	android:textSize="15sp"
	    />

	    <TextView
	        android:id="@+id/tmrec_details_address"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="left"
	        android:width="100dp" 
	        android:textSize="15sp"
	    />
	
    </LinearLayout>
    
    <!-- price -->
     <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="0dp"
        android:layout_weight="1"
        >
	    <TextView
	    	android:text="Price"
	    	android:layout_width="120dp"
	    	android:layout_height="wrap_content" 
	    	android:textSize="15sp"
	    />
	    <TextView
	        android:id="@+id/tmrec_details_price"
	    	android:width="100dp"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content" 
	    	android:gravity="left"
	    	android:textSize="15sp"
	    />	
    </LinearLayout>
 
    <!-- rating -->
     <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="0dp"
        android:layout_weight="1"
        >
	    <TextView
	    	android:text="Rating"
	    	android:layout_width="120dp"
	    	android:layout_height="wrap_content" 
	    	android:textSize="15sp"
	    />
	    <TextView
	        android:id="@+id/tmrec_details_rating"
	    	android:width="100dp"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content" 
	    	android:gravity="left"
	    	android:textSize="15sp"
	    />	
    </LinearLayout>
  
    
    <!-- date -->
	<LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="0dp"
        android:layout_weight="1"
        >
	    <TextView
	    	android:text="Date"
	    	android:layout_width="120dp"
	    	android:layout_height="wrap_content" 
	    	android:textSize="15sp"
	    />
	    <TextView
	        android:id="@+id/tmrec_details_date"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content" 
	    	android:gravity="left"
	    	android:textSize="15sp"
	    />	
    </LinearLayout>
    
	<!-- URL -->
	<LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="0dp"
        android:layout_weight="1"
        >
	    <TextView
	    	android:text="URL"
	    	android:layout_width="120dp"
	    	android:layout_height="wrap_content" 
	    	android:textSize="15sp"
	    />
	    <TextView
	        android:id="@+id/tmrec_details_url"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content" 
	    	android:gravity="left"
	    	android:textSize="15sp"
	    />	
    </LinearLayout>
   
    
	<!-- comments  (edittext goes below label) -->
	<TextView
		android:text="Comments"
	    android:layout_width="120dp"
	    android:layout_height="wrap_content" 
	    android:paddingTop="10dp"
	    android:textSize="15sp"
	/>
	
	<LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="0dp"
        android:layout_weight="4"
        >  
        <!-- blank space to move edit box to the right -->
        <TextView
	    	android:text=""
	    	android:layout_width="20dp"
	    	android:layout_height="wrap_content" 
	    	android:textSize="15sp"
	    />
		<TextView
	    	android:id="@+id/tmrec_details_comments"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content" 	
    		android:lines="6"
    		android:minLines="4"
    		android:gravity="top|left" 
    		android:maxLines="10" 
    		android:scrollbars="vertical"
    		android:textSize="15sp"
		/>
	</LinearLayout>	
	
	<!-- photo, clicking on it will launch full-screen photo -->
	<LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="fill_parent"
    	android:layout_height="0dp"
        android:layout_weight="4"
        >  
		<ImageView
			android:id="@+id/tmrec_details_photo"
			android:contentDescription="@string/tuna_melt_photo"
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:gravity="center"
    	/>
	</LinearLayout>
	   
</LinearLayout>
